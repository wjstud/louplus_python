{% extends "base.html" %}
{% from "macros.html" import render_pagination %}

{% block title %}Live Home{% endblock %}

{% block body %}
<div class="row">
    <!-- 改为从 pagination 对象获取直播 items -->
    {% for live in pagination.items %}
    <div class="col-sm-6 col-md-4 live">
        <div class="thumbnail">
            <a href="{{ url_for('live.detail', live_id=live.id) }}" target="_blank">
                <img src="{{ live.image_url }}" alt="直播中">
                <div class="caption">
                    <h4 class="course__name">{{ live.name }}</h4>
                    <p class="course__description">{{ live.category }}</p>
                </div>
            </a>
        </div>
    </div>
    {% endfor %}
</div>
<!-- 使用 macro 渲染分页组件 -->
{{ render_pagination(pagination, 'live.index') }}
{% endblock %}
